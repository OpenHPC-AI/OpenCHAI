server {
    listen {{ web_port }};
    server_name _;

    root {{ web_content_dir }};
    autoindex on;
    autoindex_exact_size off;
    autoindex_localtime on;

    location / {
        autoindex on;
        autoindex_exact_size off;
        autoindex_localtime on;
        sendfile on;
        tcp_nopush on;
        tcp_nodelay on;
    }
}
