# Auto-generated OpenLDAP .env file
##############################################################
#               OpenLDAP Configuration Variables             #
#      Fill these values to initialize your LDAP server       #
##############################################################

###############################
# LDAP Admin / Root Password  #
###############################
# Password for the LDAP admin (root / Manager).
# This password will be set for the default admin user.
LDAP_ROOT_PASSWD={{ ldap_env.LDAP_ROOT_PASSWD }}

#############################################
# Base Domain Components (Your LDAP Domain) #
#############################################
# Define your domain in parts:
# Example: If your domain is: sangam.nsm.in
# Then:
#   BASE_SUBDOMAIN_DC = sangam
#   BASE_SECONDARY_DC = nsm
#   BASE_PRIMARY_DC   = in
base_primary_dc={{ ldap_env.BASE_PRIMARY_DC }}
base_secondary_dc={{ ldap_env.BASE_SECONDARY_DC }}
base_subdomain_dc={{ ldap_env.BASE_SUBDOMAIN_DC }}

#########################
# LDAP Default Entries  #
#########################
# CN   = Common Name for the LDAP administrator
# OU1â€“OU7 = Organizational Units to be created by default
cn={{ ldap_env.CN }}
ou1={{ ldap_env.OU1 }}
ou2={{ ldap_env.OU2 }}
ou3={{ ldap_env.OU3 }}
ou4={{ ldap_env.OU4 }}
ou5={{ ldap_env.OU5 }}
ou6={{ ldap_env.OU6 }}
ou7={{ ldap_env.OU7 }}

##########################################
# LDAP Server Host (IP or Domain Name)   #
##########################################
# Provide the IP or domain where the OpenLDAP server runs.
# Example:
#   LDAP_SERVER_IP=10.10.10.5
#   LDAP_SERVER_IP=ldap.sangam.nsm.in
primary_ldap_server_ip={{ ldap_env.PRIMARY_LDAP_SERVER_IP }}
secondary_ldap_server_ip={{ ldap_env.SECONDARY_LDAP_SERVER_IP }}
SERVER_ROLE={{ ldap_env.SERVER_ROLE }}
#####################################################
# Set LDAP User UID & GID No to Start with          #
#####################################################
uidNumber={{ ldap_env.UIDNUMBER }}
gidNumber={{ ldap_env.GIDNUMBER }}

##############################################################
#              End of OpenLDAP Configuration                 #
##############################################################
